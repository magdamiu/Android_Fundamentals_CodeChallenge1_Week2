<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBarRedStars" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_background</item>
        <item name="colorControlActivated">@color/redStars</item>
    </style>

    <style name="CheckSwitchRadioStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_background</item>
        <item name="colorControlActivated">@color/light_background</item>
    </style>

</resources>
